<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="#03fcd3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/duck"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Stasiun"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/tv_tentang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Stasiun"
            android:padding="6dp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat:"
            android:padding="1dp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Stasiun"
            android:padding="6dp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koordinat:"
            android:padding="1dp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/tv_koordinat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="koordinat Stasiun"
            android:padding="6dp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <Button
            android:id="@+id/btn_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lagoon"
            android:text="Buka Lokasi" />

    </LinearLayout>

</ScrollView>